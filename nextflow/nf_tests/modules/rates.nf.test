nextflow_process {

    name "Test Process GFFUTILS_DB"
    script "modules/rates.nf"
    process "GFFUTILS_DB"

    test("Should create a gffutils database") {

        when {
            process {
                """
                input[0] = file("$baseDir/nf_tests/test_data/rates/create_gffutils_db/b37/input/Homo_sapiens.GRCh37.87.DDX3X_SCN5A.gff3")
                """
            }
        }

        then {
            //check if test case succeeded
            assert process.success
            //analyze trace file
            assert process.trace.tasks().size() == 1

            assert snapshot(process.out.gffutils_db_ch).match()

            // Check that the output example is still up to date
			with(process.out.gffutils_db_ch) {
				assert path(get(0)).md5 == path("$baseDir/../examples/rates/create_gffutils_db/b37/output/Homo_sapiens.GRCh37.87.DDX3X_SCN5A.gff3.db").md5
			}
        }
    }
}